[commit]
    gpgsign = true
[user]
	email = shepherdjerred@gmail.com
	name = Jerred Shepherd
    signingkey = ssh-rsa 
[gpg]
    format = ssh
[gpg "ssh"]
    program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[color]
	ui = auto
[core]
	autocrlf = input
	pager = delta
	excludesfile = ~/.gitignore_global
	editor = lvim
	whitespace = -trailing-space
[commit]
	gpgsign = true
	template = ~/.gitmessage
[credential]
{{ if eq .chezmoi.os "darwin" }}
	helper = osxkeychain
{{ else if eq .chezmoi.os "linux" }}
    helper = store
{{ end }}
[pull]
	ff = true
	rebase = true
[rebase]
    autostash = true
	autosquash = true
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[interactive]
    diffFilter = delta --color-only
[fetch]
    prune = true
[help]
	autocorrect = 5
[diff]
	mnemonicPrefix = true
	rename = true
	tool = code
    colorMoved = default
[difftool "code"]
	cmd = code --wait --diff $LOCAL $REMOTE
[log]
	abbrevCommit = true
[tab]
	sort = version:refname
[versionsort]
	prereleaseSuffix = -pre
	prereleaseSuffix = .pre
	prereleaseSuffix = -beta
	prereleaseSuffix = .beta
	prereleaseSuffix = -rc
	prereleaseSuffix = .rc
[rerere]
	enabled = true
[merge]
    conflictstyle = diff3
[delta]
    navigate = true
    syntax-theme = Nord
[init]
    defaultBranch = main
