#!/usr/bin/env bash

# Show hidden files
defaults write com.apple.finder AppleShowAllFiles true

# Quit finder menu option
defaults write com.apple.finder QuitMenuItem -bool true && \

# Path bar
defaults write com.apple.finder ShowPathbar -bool true

# Restart finder
killall Finder

# Associate files with sublime
curl "https://raw.githubusercontent.com/github/linguist/master/lib/linguist/languages.yml" \
  | yq -r "to_entries | (map(.value.extensions) | flatten) - [null] | unique | .[]" \
  | xargs -L 1 -I "{}" duti -s com.sublimetext.4 {} all
duti -s com.sublimetext.4 public.plain-text all
duti -s com.sublimetext.4 public.source-code all
duti -s com.sublimetext.4 log all
