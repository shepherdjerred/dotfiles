#!/bin/bash

brew update; brew upgrade
brew bundle dump --file ~/.local/share/chezmoi/dot_homebrew/Brewfile

vim +PlugUpdate +qall

pip install --upgrade pip
pip install -r ~/.local/share/chezmoi/requirements.txt

npm update; npm upgrade
npm install -g npm

asdf update
asdf plugin update --all

{{ if eq .chezmoi.os "darwin" -}}
bundle install
brew bundle

# stop, and upgrade yabai
brew services stop yabai
brew upgrade yabai

# uninstall the scripting addition
sudo yabai --uninstall-sa

# installing the scripting addition will restart Dock.app
sudo yabai --install-sa

# finally, start yabai
brew services start yabai

killall Dock
{{ end }}

